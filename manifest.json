{
  "name": "cfc",
  "version": "0.1.0",
  "applications": {
    "gecko": {
      "id": "cfc@schwanenlied.me",
      "strict_min_version": "48.0a1"
    }
  },
  "description": "Improve the Tor Browser user experience",
  "manifest_version": 2,
  "icons": {
    "32": "data/spray-can-32.png",
    "48": "data/spray-can-48.png",
    "64": "data/spray-can-64.png"
  },
  "permissions": ["storage", "webRequest", "webRequestBlocking"],
  "background": {
    "scripts": ["url.js", "index.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["data/twitterRewrite.js"]
    },
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["data/cloudflareRewrite.js"]
    }
  ]
}
